.container
  max-width: 80%
  @media screen and (max-width:667px)
    max-width: 100%
    grid-column-gap: 0px;
    grid-row-gap: 0px;
  margin 0 auto
  margin-top: 25px;
  margin-bottom: 25px
  display: grid;
  grid-template-columns: repeat(1,98%);
  grid-column-gap: 10px;
  grid-row-gap: 15px;
  justify-content: center;
  .delivery-card
    &:hover
      opacity: 0.8;
    border-radius: 5px;
    padding: 20px;
    @media screen and (max-width:667px)
      padding: 20px 10px;
    font-size: 150%;


.mat-card
  @media screen and (max-width:667px)
    padding 1px

.mat-card-content
  img
    width 100%
    margin 0 auto

table {
  width: 100%;
}

mat-icon
  margin-left:8px
  @media screen and (max-width:667px)
    margin:0px

.mat-form-field {
  font-size: 14px;
  width: 120px;
  margin-right: 10px
  text-align: center
}

.verde
  color green
  
.rojo
  color chocolate 

.celda
  padding-right: 2px !important 
  
  @media screen and (max-width:667px)
    padding: 0px !important 

.no_mobile
  @media screen and (max-width:667px)
    display none

.mobile
  @media screen and (min-width:668px)
    display block
